<div class="panel-group">
{{#each menus}}
<div class="panel">
    <div class="panel-heading" role="tab" id="{{title}}_{{@index}}">
        <a class="panel-title collapsed {{#unless this.subMenus}}alone{{/unless}}" data-href="{{href}}" data-toggle="collapse" data-parent=".panel-group" href="#{{title}}_{{@index}}_content" aria-expanded="true" aria-controls="{{title}}_{{@index}}_content"><i class="{{icon}}"></i> {{this.title}} {{#if this.subMenus}}<i class="glyphicon glyphicon-menu-down pull-right"></i>{{/if}}
        </a>
    </div>
    <ul id="{{title}}_{{@index}}_content" class="panel-collapse collapse nav-left-sub" role="tabpanel" aria-labelledby="{{title}}_{{@index}}">
        {{#each this.subMenus}}
        <li class="{{#if this.active}}active{{/if}}">
            <a href="{{href}}"><span class="menu-text">{{title}}</span></a>
        </li>
        {{/each}}
    </ul>
</div>
{{/each}}
</div>